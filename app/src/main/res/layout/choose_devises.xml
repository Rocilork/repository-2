<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/roomImage"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:layout_marginVertical="20dp"
                android:background="@drawable/room_rad"
                app:srcCompat="@drawable/light_white" />

            <TextView
                android:id="@+id/roomName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="devisesName"
                android:textColor="@color/blue_primary"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageButton
                android:id="@+id/roomImage2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:layout_marginVertical="20dp"
                android:background="@drawable/room_rad"
                app:srcCompat="@drawable/light_white" />

            <TextView
                android:id="@+id/roomName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="devisesName"
                android:textColor="@color/blue_primary"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_margin="2dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/roomImage3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:layout_marginVertical="20dp"
                android:background="@drawable/room_rad"
                app:srcCompat="@drawable/light_white" />

            <TextView
                android:id="@+id/roomName3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="devisesName"
                android:textColor="@color/blue_primary"
                android:textSize="20dp"
                android:textStyle="bold" />



            <ImageButton
                android:id="@+id/roomImage4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:layout_marginVertical="20dp"
                android:background="@drawable/room_rad"
                app:srcCompat="@drawable/light_white" />

            <TextView
                android:id="@+id/roomName4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="devisesName"
                android:textColor="@color/blue_primary"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:layout_margin="2dp"
            android:orientation="vertical">


            <ImageButton
                android:id="@+id/roomImage5"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:layout_marginVertical="20dp"
                android:background="@drawable/room_rad"
                app:srcCompat="@drawable/light_white" />

            <TextView
                android:id="@+id/roomName5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="devisesName"
                android:textColor="@color/blue_primary"
                android:textSize="20dp"
                android:textStyle="bold" />



            <ImageButton
                android:id="@+id/roomImage6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:onClick="onClick"
                android:layout_marginVertical="20dp"
                android:background="@drawable/room_rad"
                app:srcCompat="@drawable/light_white" />

            <TextView
                android:id="@+id/roomName6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="devisesName"
                android:textColor="@color/blue_primary"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>